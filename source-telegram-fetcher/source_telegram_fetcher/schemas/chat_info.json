{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the chat"
    },
    "type": {
      "type": ["string", "null"],
      "description": "Type of chat: private, group, supergroup, channel"
    },
    "title": {
      "type": ["string", "null"],
      "description": "Title of the chat (for groups/channels)"
    },
    "username": {
      "type": ["string", "null"],
      "description": "Username of the chat"
    },
    "first_name": {
      "type": ["string", "null"],
      "description": "First name (for private chats)"
    },
    "last_name": {
      "type": ["string", "null"],
      "description": "Last name (for private chats)"
    },
    "is_forum": {
      "type": "boolean",
      "description": "Whether the chat is a forum (has topics)"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Description of the chat"
    },
    "invite_link": {
      "type": ["string", "null"],
      "description": "Primary invite link"
    },
    "linked_chat_id": {
      "type": ["integer", "null"],
      "description": "ID of linked chat (discussion group for channels)"
    },
    "member_count": {
      "type": ["integer", "null"],
      "description": "Number of members in the chat"
    }
  },
  "required": ["id"]
}
