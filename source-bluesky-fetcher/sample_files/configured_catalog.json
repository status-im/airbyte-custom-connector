{
  "streams": [
    {
      "stream": {
        "name": "posts",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "type": "object",
          "properties": {
            "uri": {
              "type": ["string", "null"]
            },
            "cid": {
              "type": ["string", "null"]
            },
            "author_did": {
              "type": ["string", "null"]
            },
            "author_handle": {
              "type": ["string", "null"]
            },
            "author_display_name": {
              "type": ["string", "null"]
            },
            "author_avatar": {
              "type": ["string", "null"]
            },
            "text": {
              "type": ["string", "null"]
            },
            "created_at": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "langs": {
              "type": ["array", "null"],
              "items": {
                "type": "string"
              }
            },
            "embed": {
              "type": ["object", "null"]
            },
            "reply_count": {
              "type": ["integer", "null"]
            },
            "repost_count": {
              "type": ["integer", "null"]
            },
            "like_count": {
              "type": ["integer", "null"]
            },
            "indexed_at": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "labels": {
              "type": ["array", "null"],
              "items": {
                "type": "object"
              }
            },
            "search_term": {
              "type": ["string", "null"]
            }
          }
        },
        "supported_sync_modes": ["full_refresh", "incremental"],
        "default_cursor_field": ["indexed_at"],
        "source_defined_primary_key": [["uri"]]
      },
      "sync_mode": "incremental",
      "cursor_field": ["indexed_at"],
      "destination_sync_mode": "append"
    }
  ]
}
