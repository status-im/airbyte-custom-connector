{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wallet Token Transactions",
  "description": "Schema for wallet token transaction records",
  "type": "object",
  "properties": {
    "wallet_address": {
      "type": "string",
      "description": "The address of the wallet"
    },
    "wallet_name": {
      "type": "string",
      "description": "Name of the wallet (optional)"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags associated with the wallet"
    },
    "hash": {
      "type": "string",
      "description": "Transaction hash"
    },
    "method_id": {
      "type": "string",
      "description": "Method identifier"
    },
    "method_call": {
      "type": ["string", "null"],
      "description": "Decoded method call"
    },
    "method_name": {
      "type": ["string", "null"],
      "description": "Human-friendly method name"
    },
    "block": {
      "type": "integer",
      "description": "Block number"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the transaction"
    },
    "from_address": {
      "type": "string",
      "description": "Sender address"
    },
    "movement": {
      "type": ["string", "null"],
      "description": "Movement type or direction (optional)"
    },
    "to_address": {
      "type": "string",
      "description": "Recipient address"
    },
    "amount": {
      "type": "string",
      "description": "Amount transferred (in base unit)"
    },
    "token_name": {
      "type": "string",
      "description": "Name of the token"
    },
    "token_symbol": {
      "type": "string",
      "description": "Token symbol"
    },
    "token_decimal": {
      "type": "integer",
      "description": "Token decimal places"
    },
    "token_address": {
      "type": "string",
      "description": "Token contract address"
    },
    "gas_price": {
      "type": "string",
      "description": "Gas price used"
    },
    "gas_used": {
      "type": "string",
      "description": "Gas used by transaction"
    },
    "gas_decimals": {
      "type": "integer",
      "description": "Decimals used for gas"
    },
    "chain_id": {
      "type": "integer",
      "description": "Chain identifier"
    }
  }
}
