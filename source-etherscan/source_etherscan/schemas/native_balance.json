{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NativeBalance",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the balance was fetched"
    },
    "wallet_address": {
      "type": "string",
      "description": "Ethereum wallet address"
    },
    "wallet_name": {
      "type": ["string", "null"],
      "description": "Human-readable wallet name"
    },
    "tags": {
      "type": ["array", "null"],
      "items": {
        "type": "string"
      },
      "description": "Wallet tags"
    },
    "token_symbol": {
      "type": "string",
      "description": "Native token symbol (ETH)"
    },
    "token_decimal": {
      "type": "integer",
      "description": "Number of decimals for the native token"
    },
    "amount": {
      "type": "string",
      "description": "Native balance in smallest unit (wei)"
    },
    "chain_id": {
      "type": "integer",
      "description": "Blockchain chain ID"
    }
  }
}
