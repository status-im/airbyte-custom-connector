{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Wallet Internal Transactions",
  "description": "Schema for wallet internal transaction records",
  "type": "object",
  "properties": {
    "wallet_address": {
      "type": ["string", "null"],
      "description": "The address of the wallet"
    },
    "wallet_name": {
      "type": ["string", "null"],
      "description": "Name of the wallet (optional)"
    },
    "tags": {
      "type": ["array", "null"],
      "items": { "type": "string" },
      "description": "Tags associated with the wallet"
    },
    "block": {
      "type": ["integer", "null"],
      "description": "Block number of the transaction"
    },
    "timestamp": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Timestamp of the transaction"
    },
    "from_address": {
      "type": ["string", "null"],
      "description": "Sender address"
    },
    "movement": {
      "type": ["string", "null"],
      "description": "Movement type or direction"
    },
    "to_address": {
      "type": ["string", "null"],
      "description": "Recipient address"
    },
    "amount": {
      "type": ["string", "null"],
      "description": "Amount transferred (in base unit)"
    },
    "token_name": {
      "type": ["string", "null"],
      "description": "Name of the token"
    },
    "token_symbol": {
      "type": ["string", "null"],
      "description": "Token symbol"
    },
    "token_decimal": {
      "type": ["integer", "null"],
      "description": "Token decimals"
    },
    "chain_id": {
      "type": ["integer", "null"],
      "description": "Chain identifier"
    },
    "is_error": {
      "type": ["boolean", "null"],
      "description": "If the transaction is faulty or not"
    },
    "withdrawal_index": {
      "type": ["string", "null"],
      "description": "Unique withdrawal event ID"
    },
    "validator_index": {
      "type": ["string", "null"],
      "description": "The unique ID assigned to a validator"
    }
  }
}
